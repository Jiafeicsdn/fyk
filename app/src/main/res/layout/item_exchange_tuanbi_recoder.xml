<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white_one">

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_eighteen"
            android:text=""
            android:textColor="@color/bg_gray_two"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:text=""
            android:textColor="@color/bg_code_number"
            android:textSize="@dimen/twelve" />
    </RelativeLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_01"
        android:layout_marginLeft="@dimen/margin_eighteen"
        android:background="@color/bg_line" />

    <RelativeLayout
        android:id="@+id/rl_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_1">

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/margin_eighteen"
            android:layout_marginTop="@dimen/margin_fifteen">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_twenty"
            android:layout_marginTop="@dimen/margin_eighteen"
            android:layout_toRightOf="@+id/rl_02"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:lines="2"
            android:text=""
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/thirteen" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/rl_02">

            <TextView
                android:id="@+id/tv_seek_tuanbi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_ten"
                android:background="@drawable/bg_white_stroke_eight_conner_shape"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/bg_button_text_black"
                android:textSize="@dimen/twelve" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_ten"
                android:layout_toRightOf="@+id/tv_seek_tuanbi"
                android:text=""
                android:textColor="@color/bg_button_text_black"
                android:textSize="@dimen/thirteen" />

            <TextView
                android:id="@+id/tv_tuanbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_eighteen"
                android:text=""
                android:textColor="@color/bg_daoliu_yellow_one"
                android:textSize="@dimen/thirteen" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_02"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:background="@color/bg_white_one" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_eight"
        android:layout_below="@+id/rl_03"
        android:background="@color/backround" />
</RelativeLayout>
