<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:background="#00000000"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:orientation="horizontal"></LinearLayout>

        <com.lvgou.distribution.widget.SawtoothView
            android:id="@+id/sawtooh"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/point_group"
            android:layout_gravity="bottom"
            android:visibility="gone"></com.lvgou.distribution.widget.SawtoothView>
    </RelativeLayout>

</RelativeLayout>