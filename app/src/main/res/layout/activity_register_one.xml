                    android:id="@+id/img_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/register_one_code" />

                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_toRightOf="@+id/img_7"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:textColor="@color/bg_new_guide_black"
                    android:textColorHint="@color/bg_push_time"
                    android:textSize="@dimen/fifteen" />

                <TextView
