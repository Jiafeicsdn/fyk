                    android:background="@mipmap/register_one_phone" />

                <EditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_toRightOf="@+id/img_4"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/bg_new_guide_black"
                    android:textColorHint="@color/bg_push_time"
                    android:textSize="@dimen/fifteen" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin_thirty"
                android:layout_marginTop="2dp"
                android:background="@color/bg_line" />

