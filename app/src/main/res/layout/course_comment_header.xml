<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp">

        <TextView
            android:id="@+id/tv_zonghe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="综合评分："
            android:textColor="#bababa"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/ll_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_zonghe"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/im_score_one"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@mipmap/unscore_icon" />

            <ImageView
                android:id="@+id/im_score_two"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/unscore_icon" />

            <ImageView
                android:id="@+id/im_score_three"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/unscore_icon" />

            <ImageView
                android:id="@+id/im_score_four"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/unscore_icon" />

            <ImageView
                android:id="@+id/im_score_five"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/unscore_icon" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="讲课不易，喜欢就赏一下吧～"
        android:textColor="#000000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_zanshagn"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp"
        android:background="@drawable/bg_zanshang"
        android:gravity="center"
        android:text="赞赏"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_zanshang_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_zanshagn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="已有0人赏过"
        android:textColor="#bababa"
        android:textSize="11sp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/tv_zanshang_num"
        android:layout_marginTop="16dp"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/rl_none"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="快来抢沙发！"
            android:textSize="15sp"
            android:textColor="#bababa"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty"
            android:layout_marginBottom="50dp"
            android:background="@mipmap/bg_none_bee" />
    </RelativeLayout>
</RelativeLayout>