<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lvgou.distribution.widget.XListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/ly_unread_msg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_black_radius"
        android:gravity="center"
        android:visibility="gone">

    <!--    <ImageView
            android:id="@+id/img_unread_head"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp" />-->

        <TextView
            android:id="@+id/txt_unread_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/bg_white"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/im_fabu"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/feng_fabu_icon"
        android:scaleType="fitXY" />

</RelativeLayout>