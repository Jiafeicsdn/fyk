<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/ll_01"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="45dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/rl_back" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="实名认证"
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/sixteen" />
        </RelativeLayout>

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_01"
            android:background="@color/bg_line" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view_1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="姓名"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:background="@color/bg_white"
                            android:hint="请输入姓名"
                            android:inputType="text"
                            android:maxLength="5"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="性别"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radio_male"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:background="@null"
                                android:button="@drawable/state_checked_selected"
                                android:checked="false"
                                android:text="  男"></RadioButton>

                            <RadioButton
                                android:id="@+id/radio_female"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="80dp"
                                android:background="@null"
                                android:button="@drawable/state_checked_selected"
                                android:checked="false"
                                android:text="  女"></RadioButton>
                        </RadioGroup>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="城市"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <RelativeLayout
                        android:id="@+id/rl_select_city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请选择你所在的城市"
                            android:textColor="@color/bg_push_time"
                            android:textSize="@dimen/fourteen" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_fifteen"
                            android:background="@mipmap/income_left" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="出生年月"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <RelativeLayout
                        android:id="@+id/rl_select_birth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请选择出生年月"
                            android:textColor="@color/bg_push_time"
                            android:textSize="@dimen/fourteen" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_fifteen"
                            android:background="@mipmap/income_left" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="从事导游"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <RelativeLayout
                        android:id="@+id/rl_select_year"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/tv_start_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请选择从事年份"
                            android:textColor="@color/bg_push_time"
                            android:textSize="@dimen/fourteen" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_fifteen"
                            android:background="@mipmap/income_left" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="擅长语种"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <RelativeLayout
                        android:id="@+id/rl_select_languages"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                        <TextView
                            android:id="@+id/tv_languages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请选择您擅长的语种"
                            android:textColor="@color/bg_push_time"
                            android:textSize="@dimen/fourteen" />

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin_fifteen"
                        android:background="@mipmap/income_left" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="导游证 D-"
                        android:textColor="@color/bg_new_guide_black"
                        android:textSize="@dimen/fourteen" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_four_qian"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/margin_twenty"
                            android:layout_weight="1"
                            android:background="@color/bg_white"
                            android:hint="请输入前四位"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textSize="@dimen/fourteen" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/bg_line" />

                        <EditText
                            android:id="@+id/et_four_hou"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_twenty"
                            android:layout_weight="1"
                            android:background="@color/bg_white"
                            android:hint="请输入后六位"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textSize="@dimen/fourteen" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/margin_twenty_five"
                    android:layout_marginRight="@dimen/margin_twenty_five"
                    android:layout_marginTop="@dimen/margin_twenty_five"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_all"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/cb_all"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/register_user_default"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cb_all"
                            android:text="全陪"
                            android:textColor="@color/bg_new_guide_black"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_dijie"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/cb_dijie"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/register_user_default"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cb_dijie"
                            android:text="地接"
                            android:textColor="@color/bg_new_guide_black"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_lingdui"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/cb_lingdui"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/register_user_default"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cb_lingdui"
                            android:text="领队"
                            android:textColor="@color/bg_new_guide_black"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_oneday"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/cb_oneday"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/register_user_default"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cb_oneday"
                            android:text="一日游"
                            android:textColor="@color/bg_new_guide_black"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/margin_twenty_five"
                    android:layout_marginRight="@dimen/margin_twenty_five"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_zhoubian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/cb_zhoubian"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/register_user_default"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cb_zhoubian"
                            android:text="周边游"
                            android:textColor="@color/bg_new_guide_black"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_qita"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <CheckBox
                            android:id="@+id/cb_qita"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:background="@mipmap/register_user_default"
                            android:button="@null" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/cb_qita"
                            android:text="其他"
                            android:textColor="@color/bg_new_guide_black"
                            android:textSize="@dimen/fourteen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </RelativeLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_marginRight="@dimen/margin_fifteen"
                    android:layout_marginTop="@dimen/margin_twenty_five"
                    android:background="#eeeeee"
                    android:gravity="top|left"
                    android:hint="请输入擅长路线"
                    android:inputType="text"
                    android:paddingLeft="@dimen/margin_fifteen"
                    android:paddingRight="@dimen/margin_ten"
                    android:paddingTop="@dimen/margin_ten"
                    android:scrollHorizontally="false"
                    android:singleLine="false"
                    android:textColor="#666666"
                    android:textSize="@dimen/thirteen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_thirty"
                    android:text="手持身份证原件"
                    android:textColor="@color/bg_new_guide_black"
                    android:textSize="@dimen/fourteen" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="@dimen/margin_twenty_five"
                    android:layout_marginRight="@dimen/margin_twenty_five"
                    android:layout_marginTop="@dimen/margin_fifteen">

                    <ImageView
                        android:id="@+id/img_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_ten"
                        android:background="@mipmap/register_one_auth"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tv_load"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_upload_shape"
                        android:gravity="center"
                        android:text="上传"
                        android:textColor="@color/bg_white"
                        android:textSize="@dimen/sixteen" />

                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/delete_x"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:text="(用于审核身份,不对外公开)"
                    android:textColor="@color/bg_my_task_num_color"
                    android:textSize="@dimen/fourteen" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/margin_thirty"
                    android:layout_marginLeft="@dimen/margin_twenty_five"
                    android:layout_marginRight="@dimen/margin_twenty_five"
                    android:layout_marginTop="@dimen/margin_twenty_five"
                    android:background="@drawable/btn_orange_shpae"
                    android:text="提交审核"
                    android:textColor="@color/bg_button_text_black"
                    android:textSize="@dimen/fifteen" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/dialog_ios_7" />
</RelativeLayout>
