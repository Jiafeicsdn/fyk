<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="76dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fm_head_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.lvgou.distribution.utils.RoundedImageView
                android:id="@+id/im_header"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/teacher_default_head"
                android:scaleType="centerCrop"
                app:riv_corner_radius="50dp" />

            <ImageView
                android:id="@+id/img_teacher_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="3dp"
                android:src="@mipmap/bg_tecaher_authentication"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm_head_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="张三"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>