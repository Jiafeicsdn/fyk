<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/rl_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/bg_text_black"
            android:textSize="@dimen/sixteen" />

        <RelativeLayout
            android:id="@+id/rl_record"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_gold_notes"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="邀请记录"
                android:textColor="#777777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/record_num"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/oval_number"
                android:gravity="center"
                android:textSize="11sp"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_invite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_all_radius">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="邀请好友一起赚"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_belome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="66dp"
                android:text="邀请好友成为蜂优客，审核通过后"
                android:textColor="#999999"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_belome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你获得"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_myget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="#ff9900"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团币，好友获得"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_otherget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textColor="#ff9900"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团币"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="174dp"
                android:layout_height="1px"
                android:layout_below="@id/ll_money"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:background="#e5e5e5" />

            <TextView
                android:id="@+id/my_yaoqingma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="我的邀请码"
                android:textColor="#999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_invite_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_yaoqingma"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="512876"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_othermessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_invite_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="(朋友注册时输入我的邀请码)"
                android:textColor="#d5aa5f"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_mycode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_othermessage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:text="我的二维码"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/im_code"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_below="@id/tv_mycode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:src="@mipmap/pictures_no" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="190dp"
                android:layout_height="34dp"
                android:layout_below="@id/im_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:background="@drawable/bg_noradius_text"
                android:gravity="center"
                android:text="立即分享"
                android:textColor="#d5aa5f"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tv_share"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已获得"
                    android:textColor="#a3a3a3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_totalget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5261"
                    android:textColor="#ff9900"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="团币"
                    android:textColor="#a3a3a3"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>

        <include layout="@layout/dialog_share_new" />
    </RelativeLayout>
</LinearLayout>