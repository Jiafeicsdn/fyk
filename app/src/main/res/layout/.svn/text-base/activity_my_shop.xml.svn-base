<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backround"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/rl_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TITLE"
                android:textColor="@color/bg_text_black"
                android:textSize="@dimen/sixteen" />

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_ten"
                    android:background="@mipmap/goods_share" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:background="@color/bg_white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_ten" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_press_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_thirty"
            android:gravity="center_vertical"
            android:text="店铺地址点击地址分享"
            android:textColor="@color/bg_code_number"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_net_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_fifty"
            android:layout_marginRight="@dimen/margin_fifty"
            android:layout_marginTop="@dimen/margin_ten"
            android:background="@drawable/text_invited_show"
            android:gravity="center"
            android:text=""
            android:textColor="@color/bg_text_black"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_save_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_fifty"
            android:layout_marginRight="@dimen/margin_fifty"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:background="@drawable/text_invited_show"
            android:gravity="center"
            android:text="保存二维码"
            android:textColor="@color/bg_code_number"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_go_shop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_fifty"
            android:layout_marginRight="@dimen/margin_fifty"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:background="@drawable/text_invited_show"
            android:gravity="center"
            android:text="进入店铺"
            android:textColor="@color/bg_code_number"
            android:textSize="@dimen/fourteen" />
    </LinearLayout>

    <include layout="@layout/dialog_share_new" />
</RelativeLayout>