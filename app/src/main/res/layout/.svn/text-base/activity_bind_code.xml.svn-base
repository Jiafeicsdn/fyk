<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <RelativeLayout
                android:id="@+id/rl_back"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/rl_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="TITLE"
                android:textColor="@color/bg_text_black"
                android:textSize="@dimen/sixteen" />

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/goods_share" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_line" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_twenty">

                <RelativeLayout
                    android:id="@+id/rl_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_thirty_five"
                    android:background="@drawable/bg_big_width_shape">

                    <ImageView
                        android:id="@+id/img_code"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_bee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_toRightOf="@+id/rl_01"
                    android:background="@mipmap/bee_cion" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_bee"
                    android:layout_marginLeft="@dimen/margin_thirty_five"
                    android:layout_marginTop="@dimen/margin_twenty"
                    android:layout_toRightOf="@+id/rl_01"
                    android:background="@mipmap/bg_bee_left"
                    android:gravity="center_horizontal"
                    android:paddingBottom="@dimen/margin_ten" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_twelve"
                android:background="@drawable/bg_red_all_conner_shape">

                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:text="你的推广码："
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_twenty"
                    android:layout_toRightOf="@+id/tv_01"
                    android:text=""
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_thirty"
                android:text="推广方式说明"
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@mipmap/bg_down" />

            <TextView
                android:id="@+id/tv_first_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_thirty"
                android:text="第一步."
                android:textColor="@color/bg_my_task_num_color"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_first_content"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_fifty"
                android:layout_marginRight="@dimen/margin_fifty"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_success_yellow_shape"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_second_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_thirty"
                android:text="第二步."
                android:textColor="@color/bg_my_task_num_color"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_second_content"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_fifty"
                android:layout_marginRight="@dimen/margin_fifty"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_success_yellow_shape"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_thrid_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_thirty"
                android:text="第三步."
                android:textColor="@color/bg_my_task_num_color"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_thrid_content"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_fifty"
                android:layout_marginRight="@dimen/margin_fifty"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_success_yellow_shape"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_fourth_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_thirty"
                android:text="第四步."
                android:textColor="@color/bg_my_task_num_color"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_fourth_content"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_fifty"
                android:layout_marginRight="@dimen/margin_fifty"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_success_yellow_shape"
                android:gravity="center"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_thirty"
                android:text="查看应用介绍"
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@mipmap/bg_down" />
        </LinearLayout>

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <include layout="@layout/dialog_share_new" />

    <ImageView
        android:id="@+id/img_custom_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_ten"
        android:layout_marginBottom="@dimen/margin_ten"
        android:background="@mipmap/yeollw_customer"/>
</RelativeLayout>