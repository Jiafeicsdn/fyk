<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_dashang">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="57dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp"
                android:text="禁言列表"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/view_line"
            android:layout_below="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#cccccc"
            />
        <RelativeLayout
            android:layout_below="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="223dp">
            <ImageView
                android:id="@+id/im_nolist"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:background="@mipmap/no_banned_list"/>
            <com.lvgou.distribution.view.MyListView
                android:id="@+id/banned_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#00000000"
                android:listSelector="@color/transparent"
                android:scrollbars="none"/>

        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bg_dashang"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="209dp"
                android:layout_height="34dp"
                android:background="@drawable/bg_color333333_circle_shape"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:text="完成"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:textColor="#e7e7e7"
                />

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>




