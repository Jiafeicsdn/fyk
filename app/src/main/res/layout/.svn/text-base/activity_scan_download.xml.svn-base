<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_fifty"
        android:background="@drawable/bg_icon_backround_shape">

        <ImageView
            android:id="@+id/img_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/margin_thirty_five"
        android:layout_marginRight="@dimen/margin_thirty_five"
        android:layout_marginTop="@dimen/margin_thirty_five"
        android:background="@drawable/et_login_shape"
        android:hint="输入手机号码"
        android:inputType="phone"
        android:lines="1"
        android:maxLength="11"
        android:paddingLeft="@dimen/margin_fifteen"
        android:textSize="@dimen/thirteen" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/margin_thirty_five"
        android:layout_marginRight="@dimen/margin_thirty_five"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@drawable/et_login_shape"
        android:hint="输入密码"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLength="16"
        android:paddingLeft="@dimen/margin_fifteen"
        android:textSize="@dimen/thirteen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/margin_thirty_five"
        android:layout_marginRight="@dimen/margin_thirty_five"
        android:layout_marginTop="@dimen/margin_ten"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/et_login_shape"
                android:hint="输入验证码"
                android:inputType="number"
                android:lines="1"
                android:maxLength="4"
                android:paddingLeft="@dimen/margin_fifteen"
                android:textSize="@dimen/fourteen" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_1"
            android:layout_weight="1"
            android:background="@drawable/bg_code_shape"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/bg_text_grey"
            android:textSize="@dimen/fourteen" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_thirty_five"
        android:layout_marginRight="@dimen/margin_thirty_five"
        android:layout_marginTop="@dimen/margin_thirty"
        android:background="@drawable/btn_orange_shpae"
        android:text="注册"
        android:textColor="@color/bg_text_white"
        android:textSize="@dimen/fifteen" />

    <TextView
        android:id="@+id/tv_download_app"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_thirty_five"
        android:layout_marginRight="@dimen/margin_thirty_five"
        android:layout_marginTop="@dimen/margin_fifteen"
        android:background="@drawable/bg_red_shape"
        android:gravity="center"
        android:text="下载APP"
        android:textColor="@color/bg_my_task_num_color"
        android:textSize="@dimen/sixteen" />
</LinearLayout>
