<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/im_picture"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/pictures_no"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/im_picture"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:text="我就是占位子的我就是占位子的我就是占位子的我就是占位子的我就是占位子的我就是占位子的"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="#333333"
            android:ellipsize="end"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/im_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱丽丝"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:maxWidth="60dp"
                android:ellipsize="end"
                android:textColor="#bababa"/>
            <ImageView
                android:id="@+id/im_default"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_name"
                android:layout_centerVertical="true"
                android:background="@mipmap/bg_right_default"
                />
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/im_default"
                android:text="21人次"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true"
                android:textColor="#bababa"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:text="免费"
                android:layout_centerVertical="true"
                android:textColor="#ff9900"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>