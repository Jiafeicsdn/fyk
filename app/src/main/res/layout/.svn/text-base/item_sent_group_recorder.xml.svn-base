<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_ten">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white_one"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bg_white_one">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_twenty"
                    android:layout_toLeftOf="@+id/img_state"
                    android:text=""
                    android:textColor="@color/bg_balck_three"
                    android:textSize="@dimen/fifteen" />

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_fifteen" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_twenty"
                android:background="@mipmap/ling_xuxian" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:background="@color/bg_white_one">

                <RelativeLayout
                    android:id="@+id/rl_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_twenty"
                        android:background="@mipmap/icon_index_group_time" />

                    <TextView
                        android:id="@+id/tv_001"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_toRightOf="@+id/img_01"
                        android:text="出团时间:"
                        android:textColor="@color/bg_gray_three"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_toRightOf="@+id/tv_001"
                        android:text=""
                        android:textColor="@color/bg_gray_three"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:id="@+id/tv_group_days"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_fifteen"
                        android:layout_toRightOf="@+id/tv_time"
                        android:background="@drawable/bg_green_stroke_shape"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/bg_button_green"
                        android:textSize="@dimen/fourteen" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_01"
                    android:layout_marginTop="@dimen/margin_twelve">

                    <ImageView
                        android:id="@+id/img_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_twenty"
                        android:background="@mipmap/icon_index_group_address" />

                    <TextView
                        android:id="@+id/tv_002"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_toRightOf="@+id/img_02"
                        android:text="目的地:"
                        android:textColor="@color/bg_gray_three"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:id="@+id/tv_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_marginRight="@dimen/margin_twelve"
                        android:layout_toRightOf="@+id/tv_002"
                        android:text=""
                        android:textColor="@color/bg_gray_three"
                        android:textSize="@dimen/thirteen" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_02"
                    android:layout_marginTop="@dimen/margin_twelve">

                    <ImageView
                        android:id="@+id/img_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_twenty"
                        android:background="@mipmap/icon_index_group_sex" />

                    <TextView
                        android:id="@+id/tv_003"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_toRightOf="@+id/img_03"
                        android:text="导游性别:"
                        android:textColor="@color/bg_gray_three"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_ten"
                        android:layout_marginRight="@dimen/margin_twelve"
                        android:layout_toRightOf="@+id/tv_003"
                        android:text=""
                        android:textColor="@color/bg_gray_three"
                        android:textSize="@dimen/thirteen" />

                    <TextView
                        android:id="@+id/tv_daofu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/margin_ten"
                        android:text=""
                        android:textColor="@color/bg_daoliu_yellow_one"
                        android:textSize="@dimen/thirteen" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/rl_03"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:background="@color/bg_white_one" />

                <ImageView
                    android:id="@+id/img_over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_fifteen"
                    android:background="@mipmap/icon_employment_gray"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:background="@color/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_twenty"
                android:text="综合评价:"
                android:textColor="@color/bg_button_green"
                android:textSize="@dimen/fifteen" />

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/bg_carry_group_yellow" />

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/bg_carry_group_yellow" />

            <ImageView
                android:id="@+id/img_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/bg_carry_group_yellow" />

            <ImageView
                android:id="@+id/img_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/bg_carry_group_yellow" />

            <ImageView
                android:id="@+id/img_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/bg_carry_group_yellow" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_ten" />
    </LinearLayout>
</LinearLayout>
