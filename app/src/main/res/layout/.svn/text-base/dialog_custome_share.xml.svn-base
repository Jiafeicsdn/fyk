<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog_share_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent_black"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/ll_dialog_share_cotent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_sms_backround"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/share_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_weixin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:text="微信"
                    android:textColor="@color/bg_bottom_gray"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_pengyou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_pengyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/share_pegnyou" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_pengyou"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:text="朋友圈"
                    android:textColor="@color/bg_bottom_gray"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/share_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_qq"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:text="QQ"
                    android:textColor="@color/bg_bottom_gray"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_qqzone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@mipmap/share_zone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_qqzone"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_ten"
                    android:text="QQ空间"
                    android:textColor="@color/bg_bottom_gray"
                    android:textSize="@dimen/sixteen" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_sms_backround"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_ten"
                android:background="@color/bg_text_grey" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/bg_bottom_gray"
                android:textSize="@dimen/sixteen" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>