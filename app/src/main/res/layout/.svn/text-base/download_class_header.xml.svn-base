<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_download_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:id="@+id/rl_all_start"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/im_all_start"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/all_start_icon" />

            <TextView
                android:id="@+id/tv_all_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/im_all_start"
                android:text="全部开始"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_all_delete"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="全部删除"
            android:textColor="#a3a3a3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"
        />
</LinearLayout>