<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_report"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/backround"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tittle_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginTop="@dimen/margin_twenty"
            android:text="常报备的店："
            android:textColor="@color/bg_profit_gray"
            android:textSize="@dimen/fifteen" />

        <ImageView
            android:id="@+id/iv_item_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_eighteen"
            android:background="@mipmap/a_new_shop"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.lvgou.distribution.view.CircleImageView
                android:id="@+id/img_usully_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:layout_marginTop="@dimen/margin_twenty_five"
                android:src="@mipmap/a_search_list"
                android:visibility="gone" />

            <com.lvgou.distribution.view.CircleImageView
                android:id="@+id/iv_report_shop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_twenty_five"
                android:src="@mipmap/a_nearly_shop_unselect"
                android:background="@drawable/bg_black_circle_shape"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_report_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/rl_img_icon"
            android:text=""
            android:gravity="center"
            android:textColor="@color/bg_goods_manger_black"
            android:textSize="@dimen/fifteen" />

        <ImageView
            android:id="@+id/img_guide_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_marginTop="@dimen/sixteen"
            android:visibility="gone"
            android:layout_toRightOf="@+id/tv_report_shopname"
            android:src="@mipmap/icon_guide_policy" />

        <TextView
            android:id="@+id/tv_report_shopaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_report_shopname"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/rl_guider"
            android:layout_toRightOf="@id/rl_img_icon"
            android:text=""
            android:textColor="@color/bg_text_grey"
            android:textSize="@dimen/thirteen" />

        <LinearLayout
            android:id="@+id/ll_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_report_shopaddress"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_toRightOf="@id/rl_img_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主营业务："
                android:visibility="gone"
                android:textColor="@color/bg_profit_gray"
                android:textSize="@dimen/twelve" />

            <LinearLayout
                android:id="@+id/ll_addView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_guider"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_twenty_five">

            <ImageView
                android:id="@+id/img_guider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/icon_guide_map" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_report_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rl_guider"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_marginTop="1dp"
            android:text=""
            android:textColor="@color/bg_bottom_gray"
            android:textSize="@dimen/margin_twelve" />



        <View
            android:id="@+id/view01"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_text"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_toRightOf="@+id/rl_img_icon"
            android:background="@color/bg_line" />
    </RelativeLayout>
</LinearLayout>