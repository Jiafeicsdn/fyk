<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_faxian"
                android:layout_width="70dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_faxian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="发现"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/view_faxian"
                    android:layout_width="20dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#000000" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_toutiao"
                android:layout_width="70dp"
                android:layout_height="55dp">

                <TextView
                    android:id="@+id/tv_toutiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="头条"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view_toutiao"
                    android:layout_width="20dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#000000"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_guanzhu"
                android:layout_width="70dp"
                android:layout_height="55dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_guanzhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/point_guanzhu"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/tv_guanzhu"
                        android:background="@drawable/red_circle_conner_shape" />
                </RelativeLayout>


                <View
                    android:id="@+id/view_gaunzhu"
                    android:layout_width="20dp"
                    android:layout_height="4dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#000000"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/college_title_search" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f4f3f8"/>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>