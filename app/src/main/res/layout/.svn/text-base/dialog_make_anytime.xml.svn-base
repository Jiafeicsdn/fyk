<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_transparent_black">

    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_ten"
            android:background="@drawable/dialog_bg_shape"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/none_bg"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_thirty_five"
        android:layout_marginTop="100dp"
        android:background="@mipmap/delete_x" />
</RelativeLayout>

