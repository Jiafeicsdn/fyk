<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginTop="@dimen/margin_ten"
            android:text="短信标题"
            android:textColor="@color/bg_main_gray"
            android:textSize="@dimen/fourteen" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_toRightOf="@+id/tv_01"
            android:background="@color/bg_white"
            android:hint="请输入短信标题"
            android:paddingLeft="@dimen/margin_ten"
            android:singleLine="true"
            android:textColor="@color/bg_about_black"
            android:textColorHint="@color/bg_main_gray"
            android:textSize="@dimen/fourteen" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_01"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_ten"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/view_1">

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:layout_marginRight="@dimen/margin_ten"
                android:background="@color/bg_white"
                android:gravity="top|left"
                android:hint="请输入短信内容..."
                android:paddingTop="@dimen/margin_ten"
                android:textColor="@color/bg_about_black"
                android:textColorHint="@color/bg_main_gray"
                android:textSize="@dimen/fourteen" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_fifteen"
        android:layout_marginRight="@dimen/margin_fifteen"
        android:layout_marginTop="@dimen/margin_fifteen"
        android:background="@drawable/btn_orange_shpae"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/bg_button_text_black"
        android:textSize="@dimen/sixteen" />
</LinearLayout>
