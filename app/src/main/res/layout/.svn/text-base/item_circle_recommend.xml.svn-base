<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <!--<RelativeLayout-->
    <!--android:id="@+id/rl_02"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <!--<RelativeLayout-->
    <!--android:id="@+id/rl_01"-->
    <!--android:layout_width="80dp"-->
    <!--android:layout_height="80dp"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_marginRight="@dimen/margin_fifteen"-->
    <!--android:layout_marginTop="@dimen/margin_fifteen"-->
    <!--android:background="@drawable/bg_picture_conner_shape">-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="122dp">

        <ImageView
            android:id="@+id/img_teacher_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/pictures_no" />

        <TextView
            android:id="@+id/txt_read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="79dp"
            android:background="@mipmap/icon_head_read_num_bg"
            android:gravity="center"
            android:textColor="@color/bg_white"
            android:textSize="12sp" />
    </FrameLayout>
    <!--</RelativeLayout>-->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/margin_twenty"
        android:layout_marginRight="@dimen/margin_ten"
        android:layout_marginTop="@dimen/margin_eighteen"
        android:layout_toLeftOf="@+id/rl_01"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text=""
        android:textColor="@color/text_color_999999"
        android:textSize="11sp" />
    <!--</RelativeLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="@dimen/margin_ten">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:text="转自:"
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_01"
            android:text=""
            android:textColor="@color/text_color_d5aa5f"
            android:textSize="@dimen/fourteen" />

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/icon_fengwen_comment" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="评论"
                android:textColor="#a3a3a3"
                android:textSize="@dimen/fourteen" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_zan"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_twenty_five"
            android:layout_toLeftOf="@+id/ll_comment"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ding_normal_icon" />

            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="赞"
                android:textColor="#a3a3a3"
                android:textSize="@dimen/fourteen" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/backround" />
</LinearLayout>
