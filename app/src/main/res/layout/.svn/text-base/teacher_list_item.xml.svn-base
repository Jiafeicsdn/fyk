<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_viewall"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.lvgou.distribution.utils.RoundedImageView
            android:id="@+id/im_picture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/teacher_default_head"
            app:riv_corner_radius="55dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="爱丽丝"
            android:textColor="#333333"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_teach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学员"
                android:textColor="#999999"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_teach_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="213"
                android:textColor="#d5aa5f"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人"
                android:textColor="#999999"
                android:textSize="11sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_teach"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:ems="7"
            android:gravity="center"
            android:singleLine="true"
            android:text="浙江省金牌讲师爱丽丝"
            android:textColor="#999999"
            android:textSize="11sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#e5e5e5" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#e5e5e5" />
    </RelativeLayout>

</LinearLayout>