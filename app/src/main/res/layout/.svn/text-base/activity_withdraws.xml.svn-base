<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:text="未提现总收益:"
                android:textColor="@color/bg_goods_manger_black"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_fifteen"
                android:text=""
                android:textColor="@color/bg_goods_manger_black"
                android:textSize="@dimen/fourteen" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_twenty_five"
                android:layout_marginTop="@dimen/margin_ten"
                android:text="暂不可提现收益:"
                android:textColor="@color/bg_tixian"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1"
                android:layout_marginLeft="@dimen/margin_twenty_five"
                android:layout_marginTop="5dp"
                android:text="进行中的交易"
                android:textColor="@color/bg_main_statue"
                android:textSize="@dimen/ten" />

            <TextView
                android:id="@+id/tv_lock_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_fifteen"
                android:text=""
                android:textColor="@color/bg_goods_manger_black"
                android:textSize="@dimen/fourteen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_2"
                android:layout_marginTop="5dp"
                android:background="@color/bg_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_twenty_five"
                android:text="可提现收益:"
                android:textColor="@color/bg_main_gray"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_tixian_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_fifteen"
                android:text=""
                android:textColor="@color/bg_goods_manger_black"
                android:textSize="@dimen/fourteen" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_account"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@color/bg_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:text="收款账户"
            android:textColor="@color/bg_goods_manger_black"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_toLeftOf="@+id/img"
            android:text=""
            android:textColor="@color/bg_goods_manger_black"
            android:textSize="@dimen/fourteen" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:background="@mipmap/bg_detail_next" />
    </RelativeLayout>

    <!--  <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/bg_line" />-->

    <Button
        android:id="@+id/btn_tixian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_twenty_five"
        android:layout_marginRight="@dimen/margin_twenty_five"
        android:layout_marginTop="@dimen/margin_thirty"
        android:background="@drawable/bg_radius_apply"
        android:text="申请提现"
        android:textColor="#ffffff"
        android:textSize="@dimen/fifteen" />
</LinearLayout>
