<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_picture"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/pictures_no" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_picture"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="15dp"
        android:singleLine="true"
        android:text="你好拉话费卡喝咖啡哈萨克发动机卡士大夫卡啊！"
        android:textColor="#000000"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp">

        <TextView
            android:id="@+id/live_state"
            android:layout_width="42dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/live_text_green_bg"
            android:gravity="center"
            android:text="直播中"
            android:textColor="#71C713"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/im_renshu"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_toRightOf="@id/live_state"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/live_renshu_icon"/>
        <TextView
            android:id="@+id/tv_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/im_renshu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:textColor="#a3a3a3"
            android:textSize="10sp"
            android:text="256人已报名"
            />
        <TextView
            android:id="@+id/live_state_go"
            android:layout_width="62dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/live_text_orange_bg"
            android:gravity="center"
            android:text="去听课"
            android:textColor="#d5aa5f"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#e5e5e5"
        android:layout_below="@id/rl_state"/>

</RelativeLayout>