<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfcfd">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/rl_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/bg_text_black"
            android:textSize="@dimen/sixteen" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_paysuccess"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@mipmap/paysuccess_icon" />

    <TextView
        android:id="@+id/tv_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_paysuccess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="课程已支付成功"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="非常感谢您的订购！您还可以以下操作"
        android:textColor="#a3a3a3"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="返回"
        android:textColor="#d5aa5f"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_mycourse"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="查看我的课程"
        android:textColor="#d5aa5f"
        android:textSize="15sp" />

</RelativeLayout>