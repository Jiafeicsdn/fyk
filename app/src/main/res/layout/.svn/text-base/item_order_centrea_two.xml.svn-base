<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_ten">

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/margin_ten"
            android:background="@drawable/sqare_stroke_shape">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_toRightOf="@+id/rl_01"
            android:singleLine="true"
            android:text=""
            android:layout_marginRight="@dimen/margin_fifteen"
            android:textColor="@color/bg_new_guide_black"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/rl_01"
            android:text=""
            android:layout_marginRight="@dimen/margin_fifteen"
            android:textColor="@color/bg_main_gray"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_style"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_toRightOf="@+id/rl_01"
            android:text=""
            android:textColor="@color/bg_new_guide_black"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_style"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_toRightOf="@+id/tv_price"
            android:text="x"
            android:textColor="@color/bg_main_gray"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_numer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_style"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_toRightOf="@+id/tv_x"
            android:text=""
            android:textColor="@color/bg_main_gray"
            android:textSize="@dimen/fourteen" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_ten"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@color/bg_main_line" />
</LinearLayout>
