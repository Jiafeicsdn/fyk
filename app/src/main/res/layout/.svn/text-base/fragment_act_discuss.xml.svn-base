<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <com.lvgou.distribution.widget.XListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />
    <!-- <include layout="@layout/dialog_zanshang_show" />-->
    <!--<include
        android:id="@+id/rl_none"
        layout="@layout/none_data_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>-->
    <RelativeLayout
        android:id="@+id/rl_none"
        android:layout_below="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/nono_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="快来抢沙发！"
            android:textSize="15sp"
            android:textColor="#bababa"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nono_data_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty"
            android:layout_marginBottom="50dp"
            android:background="@mipmap/bg_none_bee" />
    </RelativeLayout>

</RelativeLayout>