<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_closs_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/img_banned_dialog_close" />

    <FrameLayout
        android:id="@+id/fm_head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <com.lvgou.distribution.view.CircleImageView
            android:id="@+id/img_head_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/margin_ten"
            android:src="@mipmap/faxian_user_head" />

        <ImageView
            android:id="@+id/img_teacher_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@mipmap/bg_tecaher_authentication"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_333333"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_teacher_certified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_certified_teacher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_go_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_im_home"
            android:text="去主页" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:id="@+id/banned_speak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_banned_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_banneing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="禁言" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>