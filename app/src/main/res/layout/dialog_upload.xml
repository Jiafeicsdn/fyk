<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_all_radius">

            <ImageView
                android:id="@+id/im_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="@mipmap/onelevel_light_icon" />

            <RelativeLayout
                android:id="@+id/rl_huodequanxian"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/im_level"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp">

                <View
                    android:layout_width="30dp"
                    android:layout_height="1px"
                    android:layout_centerVertical="true"
                    android:background="#bababa" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="获得特权"
                    android:textColor="#cccccc"
                    android:textSize="12sp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="1px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#bababa" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_level_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_huodequanxian"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/one_point"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_ovil_light" />

                    <TextView
                        android:id="@+id/tv_onetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="团币充值82折"
                        android:textColor="#d5aa5f"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/two_point"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_ovil_light" />

                    <TextView
                        android:id="@+id/tv_twotext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="团币充值82折"
                        android:textColor="#d5aa5f"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/three_point"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_ovil_light" />

                    <TextView
                        android:id="@+id/tv_threetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="团币充值82折"
                        android:textColor="#d5aa5f"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/four_point"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_ovil_light" />

                    <TextView
                        android:id="@+id/tv_fourtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="团币充值82折"
                        android:textColor="#d5aa5f"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/five_point"
                        android:layout_width="2dp"
                        android:layout_height="2dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_ovil_light" />

                    <TextView
                        android:id="@+id/tv_fivetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="团币充值82折"
                        android:textColor="#d5aa5f"
                        android:textSize="12sp" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_see"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/ll_level_intro"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_text_normal"
                android:gravity="center"
                android:text="去看看"
                android:textColor="#333333"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/tv_see" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/updata_top_icon" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/rl_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/share_delete" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>