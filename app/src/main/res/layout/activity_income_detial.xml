<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:text="订单总额"
                android:textColor="@color/bg_push_time"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_totle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:layout_marginRight="@dimen/margin_ten"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten">

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:layout_marginTop="@dimen/margin_ten"
                android:text="结算佣金"
                android:textColor="@color/bg_push_time"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_yongjin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:layout_marginRight="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_ten"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_01"
                android:layout_marginLeft="@dimen/margin_fifteen"
                android:layout_marginTop="@dimen/margin_ten"
                android:text="状态"
                android:textColor="@color/bg_push_time"
                android:textSize="@dimen/fourteen" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_yongjin"
                android:layout_marginRight="@dimen/margin_ten"
                android:layout_marginTop="@dimen/margin_ten"
                android:text=""
                android:textColor="@color/bg_new_guide_black"
                android:textSize="@dimen/fourteen" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten"
            android:background="@color/bg_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white">

                <TextView
                    android:id="@+id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:text="订单流水"
                    android:textColor="@color/bg_push_time"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_marginRight="@dimen/margin_ten"
                    android:layout_marginTop="@dimen/margin_fifteen"
                    android:text=""
                    android:textColor="@color/bg_push_time"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white">

                <TextView
                    android:id="@+id/tv_002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_marginTop="5dp"
                    android:text="下单时间"
                    android:textColor="@color/bg_push_time"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_ten"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/bg_push_time"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_tixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/bg_white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_003"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen"
                    android:layout_marginTop="5dp"
                    android:text="提现时间"
                    android:textColor="@color/bg_push_time"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_tixian_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_ten"
                    android:layout_marginTop="5dp"
                    android:text="2016-04-29 18:00"
                    android:textColor="@color/bg_push_time"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_seek"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_twenty_five"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:layout_weight="1"
            android:background="@drawable/btn_orange_shpae"
            android:text="查看订单详细"
            android:textColor="@color/bg_button_text_black"
            android:textSize="@dimen/fifteen" />

        <Button
            android:id="@+id/btn_go_list"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginRight="@dimen/margin_twenty_five"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:layout_weight="1"
            android:background="@drawable/bg_task_black_shape"
            android:text="返回订单列表"
            android:textColor="@color/bg_button_text_black"
            android:textSize="@dimen/fifteen" />
    </LinearLayout>


</LinearLayout>
