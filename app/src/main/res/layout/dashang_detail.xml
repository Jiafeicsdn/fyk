<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_dashang">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@mipmap/dashang_dialog_top" />

        <com.lvgou.distribution.utils.RoundedImageView
            android:id="@+id/img_head_header"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/header_footer_left_right_padding"
            android:src="@mipmap/teacher_default_head"
            app:riv_corner_radius="61dp" />

        <LinearLayout
            android:id="@+id/ll_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/img_head_header"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_sendname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textColor="#999999"/>
            <TextView
                android:id="@+id/tv_resive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:textSize="13sp"
                android:textColor="#ff9900"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dashang_exit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/dashang_exit_icon" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/im_dashang_moneyline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_names"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@mipmap/dashang_moneyline" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_dashang_moneyline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/media_controller_seekbar_width"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="#fc4d30"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#fc4d30"
                android:layout_marginLeft="2dp"
                android:text="币"/>

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>