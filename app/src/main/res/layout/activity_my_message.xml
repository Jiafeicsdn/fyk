<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_ten" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white"
        >
    <RelativeLayout
        android:id="@+id/rl_system_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/img_system_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:background="@mipmap/icon_msg_center_sys" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/img_system_left_icon"
            android:text="系统消息"
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_system_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_toLeftOf="@+id/img_system_icon"
            android:background="@drawable/red_circle_conner_shape"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="@dimen/thirteen"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/img_system_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:background="@mipmap/main_small_right" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_fifteenline"
        android:background="@color/bg_line"
        />

    <RelativeLayout
        android:id="@+id/rl_fengyou_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/img_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:background="@mipmap/icon_msg_center_fyou" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/img_001"
            android:text="蜂优团队"
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_fengyou_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_toLeftOf="@+id/img_002"
            android:background="@drawable/red_circle_conner_shape"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="@dimen/thirteen"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/img_002"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:background="@mipmap/main_small_right" />
    </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_ten" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white"
        >
    <RelativeLayout
        android:id="@+id/rl_my_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/img_003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:background="@mipmap/icon_msg_center_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/img_003"
            android:text="评论"
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_toLeftOf="@+id/img_004"
            android:background="@drawable/red_circle_conner_shape"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="@dimen/thirteen"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:background="@mipmap/main_small_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_fifteenline"
        android:background="@color/bg_line" />

    <RelativeLayout
        android:id="@+id/rl_my_zan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/img_005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:background="@mipmap/icon_msg_center_zan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/img_005"
            android:text="赞"
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_zan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginRight="@dimen/margin_ten"
            android:layout_toLeftOf="@+id/img_006"
            android:background="@drawable/red_circle_conner_shape"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="@color/bg_white"
            android:textSize="@dimen/thirteen"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_006"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:background="@mipmap/main_small_right" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
