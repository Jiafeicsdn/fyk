                        android:textColor="@color/bg_white"
                        android:textSize="@dimen/fourteen" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rl_five_hundred"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_ten"
                        android:layout_marginLeft="@dimen/margin_twenty_five"
                        android:layout_marginTop="@dimen/margin_ten"
                        android:background="@mipmap/yellow_five_hundred">

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_exchange_8"
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_twenty_five"
                        android:background="@drawable/bg_task_orange_shape"
                        android:gravity="center"
                        android:text="立即兑换"
                        android:textColor="@color/bg_white"
                        android:textSize="@dimen/fourteen" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_fifteen">

                    <RelativeLayout
                        android:id="@+id/rl_thousand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_ten"
                        android:layout_marginLeft="@dimen/margin_twenty_five"
                        android:layout_marginTop="@dimen/margin_ten"
                        android:background="@mipmap/yellow_thousand" />

                    <TextView
                        android:id="@+id/tv_exchange_9"
                        android:layout_width="85dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_twenty_five"
                        android:background="@drawable/bg_task_orange_shape"
                        android:gravity="center"
                        android:text="立即兑换"
                        android:textColor="@color/bg_white"
                        android:textSize="@dimen/fourteen" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/dialog_exchange" />
</RelativeLayout>
