<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backround">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@color/bg_white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginTop="@dimen/margin_fifteen">

            <View
                android:id="@+id/view_1"
                android:layout_width="2dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@color/bg_baoming_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/view_1"
                android:text="关于讲师"
                android:textColor="@color/bg_profit_gray"
                android:textSize="@dimen/thirteen" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twelve"
            android:text=""
            android:textColor="@color/bg_text_black_three"
            android:textSize="@dimen/sixteen" />

        <RelativeLayout
            android:id="@+id/rl_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty">

            <ImageView
                android:id="@+id/img_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/teacher_seat_seek" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/img_01"
                android:text="学员人数"
                android:textColor="@color/bg_profit_gray"
                android:textSize="@dimen/thirteen" />

            <TextView
                android:id="@+id/tv_student_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_02"
                android:text=""
                android:textColor="@color/bg_daoliu_yellow_one"
                android:textSize="@dimen/thirteen" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_levels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_02"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:layout_marginRight="@dimen/margin_twenty"
            android:layout_marginTop="@dimen/margin_twenty"
            android:text=""
            android:textColor="@color/bg_teacher_seat_content_gray"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_past_classes"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_below="@+id/tv_levels"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_twenty"
            android:background="@drawable/bg_white_stroke_shape"
            android:gravity="center"
            android:text="他的往期课程"
            android:textColor="@color/bg_profit_gray"
            android:textSize="@dimen/thirteen" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_past_classes"
            android:layout_marginTop="@dimen/margin_twenty" />
    </RelativeLayout>
</RelativeLayout>
