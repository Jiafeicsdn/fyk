<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_one">

    <RelativeLayout
        android:id="@+id/rl_icon"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginLeft="@dimen/margin_fifteen"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@drawable/conner_shape_one">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/bg_none_order"
            android:scaleType="centerCrop"
            android:padding="1dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_fifteen"
        android:layout_marginRight="@dimen/margin_fifteen"
        android:layout_marginTop="@dimen/margin_fifteen"
        android:layout_toRightOf="@+id/rl_icon"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/bg_balck_three"
        android:textSize="@dimen/thirteen" />

    <RelativeLayout
        android:id="@+id/rl_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="@dimen/margin_fifteen"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/rl_icon">

        <TextView
            android:id="@+id/tv_tuanbi"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:background="@drawable/tuanbi_shape_one"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:textColor="#FEA218"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/tv_tuanbi"
            android:text=""
            android:textColor="@color/bg_gray_three"
            android:textSize="@dimen/twelve"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_02"
        android:layout_marginTop="@dimen/margin_eight"
        android:layout_toRightOf="@+id/rl_icon">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:text=""
            android:textColor="@color/bg_gray_three"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_0003"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:layout_toRightOf="@+id/tv_num"
            android:text="Â·"
            android:textColor="@color/bg_gray_three"
            android:textSize="@dimen/eighteen"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tv_kucun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:layout_toRightOf="@+id/tv_0003"
            android:text=""
            android:textColor="@color/bg_gray_three"
            android:textSize="@dimen/twelve" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_title"
        android:layout_marginRight="@dimen/margin_fifteen"
        android:layout_marginTop="5dp"
        android:background="@mipmap/duihuan_yellow_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_icon"
        android:layout_marginTop="@dimen/margin_fifteen"
        android:background="@color/bg_line" />
</RelativeLayout>
