<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bg_white">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/rl_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="直播中"
            android:textColor="@color/bg_xueyuan_green"
            android:textSize="@dimen/fifteen" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_eight"
            android:layout_marginTop="@dimen/margin_twenty"
            android:layout_toRightOf="@id/img_head"
            android:text="导师:"
            android:textColor="@color/bg_liveing_black"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_twenty"
            android:layout_toRightOf="@+id/tv_01"
            android:text=""
            android:textColor="@color/bg_liveing_black"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_01"
            android:layout_marginLeft="@dimen/margin_eight"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_head"
            android:text="课题:"
            android:textColor="@color/bg_liveing_black"
            android:textSize="@dimen/thirteen" />

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_01"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_02"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bg_liveing_black"
            android:textSize="@dimen/thirteen" />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_liveing_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_liveing_num_shape"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_fifteen"
                android:paddingRight="@dimen/margin_fifteen"
                android:text="10观看"
                android:textColor="@color/bg_button_text_black"
                android:textSize="@dimen/ten" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_liveing_num"
                android:layout_marginTop="@dimen/margin_ten"
                android:layout_toRightOf="@+id/tv_liveing_num"
                android:text="+1"
                android:textColor="@color/bg_code_number"
                android:textSize="@dimen/twelve"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>
</LinearLayout>
