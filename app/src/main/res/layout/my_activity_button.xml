<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="我是占位子的我是我是占位子的我是我是占位子的我是我是占位子的我是占位子的我是占位子的我是占位子的我是占位子的我是占位子的"
        android:textColor="#999999"
        android:textSize="13sp" />

    <View
        android:id="@+id/view_edit_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#CDCED2" />

    <TextView
        android:id="@+id/tv_edit_act"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="编辑活动"
        android:textColor="#d5aa5f"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_stop_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#CDCED2" />

    <TextView
        android:id="@+id/tv_stop_act"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="停止活动"
        android:textColor="#d5aa5f"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#CDCED2" />

    <TextView
        android:id="@+id/tv_delete_act"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="删除活动"
        android:textColor="#FC4D30"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#646465" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="取消"
        android:textColor="#000000"
        android:textSize="14sp" />
</LinearLayout>