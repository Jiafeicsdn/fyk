<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="@dimen/margin_ten"
        android:layout_marginTop="@dimen/margin_ten"
        android:background="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_ten"
            android:text="【汪记】"
            android:textColor="@color/bg_text_black"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/margin_ten"
            android:layout_toRightOf="@+id/tv_shop_name"
            android:singleLine="true"
            android:text="核桃核桃核桃核桃核"
            android:textColor="@color/bg_text_black"
            android:textSize="@dimen/sixteen" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shop_name"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:text="售价:"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_toRightOf="@id/tv_01"
                    android:text="￥1220.00"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_twenty_five"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:text="佣金:"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_toRightOf="@id/tv_02"
                    android:text="￥52.0"
                    android:textColor="@color/bg_code_number"
                    android:textSize="@dimen/fourteen" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_ten"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:text="销量:"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_sale_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_toRightOf="@+id/tv_03"
                    android:text="123"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_twenty_five"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:text="库存:"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />

                <TextView
                    android:id="@+id/tv_save_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/margin_ten"
                    android:layout_toRightOf="@+id/tv_04"
                    android:text="123"
                    android:textColor="@color/bg_text_grey"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_twenty"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="分享"
            android:textColor="@color/bg_text_black"
            android:textSize="@dimen/fourteen" />
    </RelativeLayout>
</LinearLayout>
