<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_one">

    <LinearLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backround"
        android:orientation="vertical">

        <View
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/backround" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/bg_white_one">

            <View
                android:id="@id/view_01"
                android:layout_width="5dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/bg_baoming_yellow" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_ten"
                android:layout_toRightOf="@+id/view_01"
                android:text="通讯录好友"
                android:textColor="@color/bg_gray_two"
                android:textSize="@dimen/fourteen" />

            <RelativeLayout
                android:id="@+id/rl_more_friends"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/img_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_fifteen"
                    android:background="@mipmap/main_small_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_ten"
                    android:layout_toLeftOf="@+id/img_01"
                    android:text="更多"
                    android:textColor="@color/bg_gray_two"
                    android:textSize="@dimen/fourteen" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_02"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/ll_01"
        android:background="@color/bg_white_one">

        <RelativeLayout
            android:id="@+id/rl_01"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_fifteen"
            android:layout_marginRight="@dimen/margin_ten">

            <ImageView
                android:id="@+id/img_teacher_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_teacher_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/bg_tecaher_authentication"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/rl_01"
            android:text=""
            android:textColor="@color/bg_balck_three"
            android:textSize="@dimen/fourteen" />

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/rl_01"
            android:text="动态:"
            android:textColor="@color/bg_gray_two"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_fengwen_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_01"
            android:text=""
            android:textColor="@color/bg_gray_two"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/margin_twenty"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_fengwen_num"
            android:text="粉丝:"
            android:textColor="@color/bg_gray_two"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_fans_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_02"
            android:text=""
            android:textColor="@color/bg_gray_two"
            android:textSize="@dimen/twelve" />

        <ImageView
            android:id="@+id/img_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_twenty"
            android:background="@mipmap/circle_add_follow" />

        <ImageView
            android:id="@+id/img_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_ten"
            android:layout_marginTop="@dimen/margin_fifteen"
            android:layout_toRightOf="@+id/tv_name"
            android:background="@mipmap/icon_man" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_02"
        android:layout_marginTop="5dp"
        android:background="@color/bg_line" />
</RelativeLayout>
