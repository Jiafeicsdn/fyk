<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="245dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_dashang">
        <RelativeLayout
            android:id="@+id/img_closs_dialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/img_banned_dialog_close" />
        </RelativeLayout>


        <FrameLayout
            android:id="@+id/fm_head_layout"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <com.lvgou.distribution.view.CircleImageView
                android:id="@+id/img_head_pic"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:background="@mipmap/faxian_user_head" />

            <ImageView
                android:id="@+id/img_teacher_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="2dp"
                android:src="@mipmap/bg_tecaher_authentication"
                android:visibility="visible" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fm_head_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="爱丽丝"
            android:textColor="@color/text_color_333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_teacher_certified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/icon_certified_teacher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="33dp">

            <RelativeLayout
                android:id="@+id/rl_go_home"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tv_go_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:text="去主页"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_im_home"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/tv_go_home"/>

            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="28dp"
                android:background="#999999" />

            <RelativeLayout
                android:id="@+id/rl_banned_speak"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_banned_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_banned"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/img_banned_icon"
                    android:layout_marginLeft="10dp"
                    android:text="禁言"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    />


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>