<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfcfd"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/dashang_detail_title" />
    <RelativeLayout
        android:id="@+id/rl_list_title"
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_height="224dp"
        >

        <FrameLayout
            android:id="@+id/fm_head_layout"
            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp">

            <com.lvgou.distribution.view.CircleImageView
                android:id="@+id/img_head_header"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:background="@mipmap/personal_head_icon" />

            <ImageView
                android:id="@+id/img_teacher_label"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/jiangshi_icon" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fm_head_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="爱丽丝"
            android:textColor="#e7a739"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:text="共收到团币"
            android:textColor="#a3a3a3"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_total_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/total_money"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:text="1111"
            android:textColor="#fc4d30"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_total_number"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:src="@mipmap/icon_certified_teacher" />
    </RelativeLayout>
    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/rl_list_title"
        android:background="#eeeeee" />

</RelativeLayout>