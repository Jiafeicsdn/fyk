<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white_one">

    <RelativeLayout
        android:id="@+id/rl_01"
        android:layout_width="75dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_fifteen"
        android:layout_marginTop="@dimen/margin_ten">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/img_course_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="1dp"
                android:visibility="gone" />
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_twelve"
        android:layout_marginTop="@dimen/margin_ten"
        android:layout_toRightOf="@+id/rl_01"
        android:text="讲师:"
        android:textColor="@color/bg_balck_three"
        android:textSize="@dimen/fifteen" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_twelve"
        android:layout_marginTop="@dimen/margin_ten"
        android:layout_toRightOf="@+id/tv_01"
        android:text=""
        android:textColor="@color/bg_balck_three"
        android:textSize="@dimen/fifteen" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/margin_twelve"
        android:layout_marginRight="@dimen/margin_eighteen"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rl_01"
        android:ellipsize="end"
        android:lines="2"
        android:text=""
        android:textColor="@color/bg_gray_two"
        android:textSize="@dimen/fourteen" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rl_01">

        <ImageView
            android:id="@+id/img_001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_twelve"
            android:background="@mipmap/icon_num_new" />

        <TextView
            android:id="@+id/tv_seek_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_eight"
            android:layout_toRightOf="@+id/img_001"
            android:text=""
            android:textColor="@color/bg_gray_one"
            android:textSize="@dimen/twelve" />

        <TextView
            android:id="@+id/tv_tuanbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_fifteen"
            android:text=""
            android:textColor="@color/bg_daoliu_yellow_one"
            android:textSize="@dimen/fourteen" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_01"
        android:layout_marginTop="@dimen/margin_fifteen"
        android:background="@color/bg_line_one" />
</RelativeLayout>
