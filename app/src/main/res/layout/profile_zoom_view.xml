<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_zoom"
    android:layout_width="match_parent"
    android:background="@color/bg_white_one"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_forty"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_guider_top_two" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_thirty_five"
        android:background="@mipmap/bg_guider_top_one">

        <RelativeLayout
            android:id="@+id/rl_send_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_send_group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:text=""
                android:textColor="@color/bg_balck_three"
                android:textSize="@dimen/fifteen" />

            <TextView
                android:id="@+id/tv_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_send_group_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="派团记录"
                android:textColor="@color/bg_push_time"
                android:textSize="@dimen/twelve" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_ten" />
        </RelativeLayout>

        <View
            android:id="@+id/view_01"
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/bg_line" />

        <RelativeLayout
            android:id="@+id/rl_carry_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_carry_group_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_fifteen"
                android:text=""
                android:textColor="@color/bg_balck_three"
                android:textSize="@dimen/fifteen" />

            <TextView
                android:id="@+id/tv_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_carry_group_num"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="接团记录"
                android:textColor="@color/bg_push_time"
                android:textSize="@dimen/twelve" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_02"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_ten" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
